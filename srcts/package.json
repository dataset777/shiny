{
  "version": "1.6.0",
  "private": true,
  "main": "src/index.ts",
  "engines": {
    "node": ">= 14",
    "yarn": ">= 1.22"
  },
  "devDependencies": {
    "@babel/core": "^7.12.17",
    "@babel/preset-env": "^7.12.17",
    "@babel/preset-typescript": "^7.12.17",
    "@babel/runtime": "^7.12.18",
    "@types/jest": "^26",
    "@types/jquery": "patch:@types/jquery@^3.5.5#./patch/types_jquery-1.patch",
    "@types/lodash": "^4",
    "@typescript-eslint/eslint-plugin": "^4",
    "@typescript-eslint/parser": "^4",
    "browserslist": "^4.16.3",
    "esbuild": "^0.8.50",
    "esbuild-plugin-babel": "patch:esbuild-plugin-babel@^0.2.2#./patch/esbuild-babel.patch",
    "eslint": "^7",
    "eslint-config-prettier": "^7",
    "eslint-plugin-jest": "^24",
    "eslint-plugin-prettier": "^3",
    "jest": "^26",
    "lint-staged": "^10",
    "parcel": "^1.12.3",
    "parcel-bundler": "^1.12.3",
    "prettier": "2",
    "readcontrol": "^1.0.0",
    "replace": "^1.2.0",
    "ts-jest": "^26",
    "ts-polyfill": "^3.8.2",
    "type-coverage": "^2",
    "typescript": "^4"
  },
  "scripts": {
    "watch": "yarn run build_shiny --watch",
    "build": "yarn run build_shiny",
    "prebuild": "yarn run lint && yarn run typescript-check",
    "build_shiny": "yarn run prebuild && yarn run bundle_shiny",
    "bundle_shiny": "node esbuild.config.mjs",
    "bundle_shiny_parcel2": "parcel build -d ../inst/www/shared --no-minify -o shiny.js src/index.ts",
    "watch_parcel2": "yarn run prebuild && parcel run -d ../inst/www/shared -o shiny.js srcjs/index.ts",
    "replace_shiny_version2": "replace --silent '\"[^\"]+\"; // @VERSION@' \"\\\"`node -e 'console.log(require(\"readcontrol\").readSync(\"../DESCRIPTION\").version)'`\\\"; // @VERSION@\" src/shiny.ts",
    "test": "jest",
    "lint": "eslint --fix --ext .ts src",
    "lint-check": "eslint --ext .ts src",
    "typescript-check": "tsc -p tsconfig.json --noEmit",
    "type-check": "type-coverage -p tsconfig.json --detail --at-least 85",
    "checks": "yarn run typescript-check && yarn run type-check && yarn run lint-check"
  },
  "dependencies": {
    "core-js": "^3.9",
    "lodash": "^4",
    "util-inspect": "https://github.com/deecewan/browser-util-inspect#c0b4350"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
